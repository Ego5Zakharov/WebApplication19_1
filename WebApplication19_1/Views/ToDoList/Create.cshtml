@model WebApplication19_1.Models.ToDoList

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ToDoList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeriodOfExecution" class="control-label"></label>
                <input asp-for="PeriodOfExecution" class="form-control" />
                <span asp-validation-for="PeriodOfExecution" class="text-danger"></span>
            </div>
                        <div class="form-group">  
                <label asp-for = "Condition">Condition</label>
               @Html.DropDownListFor(model => model.Condition, Enum.GetValues(typeof(Condition)).Cast<Condition>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }), new { @class = "form-control", id = "Condition" })
             </div>
            <div class="form-group">  
                <label asp-for = "Condition">Priority</label>
                @Html.DropDownListFor(model => model.Priority, Enum.GetValues(typeof(Priority)).Cast<Priority>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }), new { @class = "form-control", id = "Condition" })
             </div>
              <div class="form-group col-md-5">  
                <label asp-for = "Condition">Category</label>
                @Html.DropDownListFor(model => model.Category, Enum.GetValues(typeof(Category)).Cast<Category>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }), new { @class = "form-control", id = "Category" })
             </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
